<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <!-- Icono del servicio a la izquierda -->
    <ImageView
        android:id="@+id/iv_servicio_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/bancos"
        android:layout_gravity="center_vertical" />

    <!-- Contenedor de texto a la derecha -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="8dp">

        <!-- Nombre del servicio -->
        <TextView
            android:id="@+id/tv_servicio_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del Servicio"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Descripción del servicio -->
        <TextView
            android:id="@+id/tv_servicio_descripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descripción del servicio"
            android:textSize="14sp"
            android:textColor="#757575" />

        <TextView
            android:id="@+id/tv_servicio_horario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Horario"
            android:textSize="14sp"
            android:textColor="#757575" />

        <TextView
            android:id="@+id/tv_servicio_telefono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Teléfono"
            android:textSize="14sp"
            android:textColor="#757575" />

        <!-- Botón de ubicación centrado -->
        <Button
            android:id="@+id/btn_ubicacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ubicación"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>
</LinearLayout>